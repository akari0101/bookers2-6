<div class="error-message">
    <% if @book.errors.any? %>
    <%= @book.errors.count %> errors detected.
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
</div>


<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1 detail'>
      <%= render 'detail', book: @book, book_comment: @book_comment %>
    </div>
  </div>
</div>